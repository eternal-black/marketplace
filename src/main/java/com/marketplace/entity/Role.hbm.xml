<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping package="com.marketplace.entity">

    <class name="com.marketplace.entity.Role" table="role">
        <id name="id" column="ID">
            <generator class="native"/>
        </id>
        <property name="role" column="ROLE"/>
        <set name="users">
            <key>
                <column name="ID_ROLE"/>
            </key>
            <one-to-many class="com.marketplace.entity.User"/>
        </set>
    </class>

</hibernate-mapping>