<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping package="com.marketplace.entity">

    <class name="com.marketplace.entity.Wallet" table="wallet">
        <id name="id" column="ID">
            <generator class="native"/>
        </id>
        <many-to-one name="user" column="ID_USER" class="com.marketplace.entity.User" fetch="select"/>
    </class>

</hibernate-mapping>