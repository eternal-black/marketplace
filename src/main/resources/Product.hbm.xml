<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping package="com.marketplace.entity">
    <class name="com.marketplace.entity.Product" table="product">

        <id name="id" column="ID">
            <generator class="identity"/>
        </id>

        <property name="name" column="name"/>
        <property name="description" column="description"/>
        <property name="cost" column="cost"/>
        <property name="discount" column="discount"/>
        <property name="count" column="count"/>
        <property name="rating" column="rating"/>

        <property name="status" column="status">
            <type name="org.hibernate.type.EnumType">
                <param name="enumClass">com.marketplace.entity.enums.ProductStatus</param>
                <param name="useNamed">true</param>
            </type>
        </property>

    </class>
</hibernate-mapping>