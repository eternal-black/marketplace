<?xml version='1.0' encoding='UTF-8'?>
<faces-config version="2.2" xmlns="http://xmlns.jcp.org/xml/ns/javaee"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee 
    http://xmlns.jcp.org/xml/ns/javaee/web-facesconfig_2_2.xsd">

    <application>
        <locale-config>
            <default-locale>en_US</default-locale>
        </locale-config>
        <resource-bundle>
            <base-name>messages</base-name>
            <var>msg</var>
        </resource-bundle>
    </application>

    <navigation-rule>
        <from-view-id>/search_products.xhtml</from-view-id>

        <navigation-case>
            <from-action>#{searchProductsBean.addToOrder}</from-action>
            <from-outcome>success</from-outcome>
            <to-view-id>/search_products.xhtml</to-view-id>
        </navigation-case>
        <navigation-case>
            <from-action>#{searchProductsBean.addToOrder}</from-action>
            <from-outcome>fail</from-outcome>
            <to-view-id>/search_products.xhtml</to-view-id>
        </navigation-case>

        <navigation-case>
            <from-action>#{searchProductsBean.searchProductsByCriteria}</from-action>
            <from-outcome>success</from-outcome>
            <to-view-id>/search_products.xhtml</to-view-id>
        </navigation-case>
        <navigation-case>
            <from-action>#{searchProductsBean.searchProductsByCriteria}</from-action>
            <from-outcome>fail</from-outcome>
            <to-view-id>/search_products.xhtml</to-view-id>
        </navigation-case>
    </navigation-rule>

    <navigation-rule>
        <from-view-id>/view_product.xhtml</from-view-id>

        <navigation-case>
            <from-action>#{productBean.addProductToOrder}</from-action>
            <from-outcome>success</from-outcome>
            <to-view-id>/view_product.xhtml</to-view-id>
        </navigation-case>
        <navigation-case>
            <from-action>#{productBean.addProductToOrder}</from-action>
            <from-outcome>fail</from-outcome>
            <to-view-id>/view_product.xhtml</to-view-id>
        </navigation-case>

        <navigation-case>
            <from-outcome>redirectToUpdateProductPage</from-outcome>
            <to-view-id>/edit_product.xhtml</to-view-id>
        </navigation-case>
    </navigation-rule>

    <navigation-rule>
        <from-view-id>/edit_product.xhtml</from-view-id>

        <navigation-case>
            <from-action>#{productBean.addProduct}</from-action>
            <from-outcome>success</from-outcome>
            <to-view-id>/view_product.xhtml</to-view-id>
        </navigation-case>
        <navigation-case>
            <from-action>#{productBean.addProduct}</from-action>
            <from-outcome>fail</from-outcome>
            <to-view-id>/edit_product.xhtml</to-view-id>
        </navigation-case>

        <navigation-case>
            <from-action>#{productBean.updateProduct}</from-action>
            <from-outcome>success</from-outcome>
            <to-view-id>/view_product.xhtml</to-view-id>
        </navigation-case>
        <navigation-case>
            <from-action>#{productBean.updateProduct}</from-action>
            <from-outcome>fail</from-outcome>
            <to-view-id>/edit_product.xhtml</to-view-id>
        </navigation-case>

        <navigation-case>
            <from-action>#{productBean.deleteProduct}</from-action>
            <from-outcome>success</from-outcome>
            <to-view-id>/profile.xhtml</to-view-id>
        </navigation-case>
        <navigation-case>
            <from-action>#{productBean.deleteProduct}</from-action>
            <from-outcome>fail</from-outcome>
            <to-view-id>/profile.xhtml.xhtml</to-view-id>
        </navigation-case>
    </navigation-rule>

    <navigation-rule>
        <from-view-id>/authorization.xhtml</from-view-id>

        <navigation-case>
            <from-action>#{userBean.authorization}</from-action>
            <from-outcome>success</from-outcome>
            <to-view-id>/profile.xhtml</to-view-id>
        </navigation-case>

        <navigation-case>
            <from-action>#{userBean.authorization}</from-action>
            <from-outcome>fail</from-outcome>
            <to-view-id>/authorization.xhtml</to-view-id>
        </navigation-case>
    </navigation-rule>

    <navigation-rule>
        <from-view-id>/registration.xhtml</from-view-id>

        <navigation-case>
            <from-action>#{userBean.registration}</from-action>
            <from-outcome>success</from-outcome>
            <to-view-id>/profile.xhtml</to-view-id>
        </navigation-case>

        <navigation-case>
            <from-action>#{userBean.registration}</from-action>
            <from-outcome>fail</from-outcome>
            <to-view-id>/authorization.xhtml</to-view-id>
        </navigation-case>
    </navigation-rule>

    <navigation-rule>
        <from-view-id>/profile.xhtml</from-view-id>

        <navigation-case>
            <from-action>#{userBean.deleteAccount}</from-action>
            <from-outcome>fail</from-outcome>
            <to-view-id>/profile.xhtml</to-view-id>
        </navigation-case>

        <navigation-case>
            <from-action>#{userBean.deleteAccount}</from-action>
            <from-outcome>success</from-outcome>
            <to-view-id>/authorization.xhtml</to-view-id>
        </navigation-case>
    </navigation-rule>

    <navigation-rule>
        <from-view-id>/settings.xhtml</from-view-id>

        <navigation-case>
            <from-action>#{userBean.updateAccount}</from-action>
            <from-outcome>fail</from-outcome>
            <to-view-id>/settings.xhtml</to-view-id>
        </navigation-case>

        <navigation-case>
            <from-action>#{userBean.updateAccount}</from-action>
            <from-outcome>success</from-outcome>
            <to-view-id>/profile.xhtml</to-view-id>
        </navigation-case>

        <navigation-case>
            <from-action>#{userBean.deleteAccount}</from-action>
            <from-outcome>fail</from-outcome>
            <to-view-id>/profile.xhtml</to-view-id>
        </navigation-case>

        <navigation-case>
            <from-action>#{userBean.deleteAccount}</from-action>
            <from-outcome>success</from-outcome>
            <to-view-id>/authorization.xhtml</to-view-id>
        </navigation-case>
    </navigation-rule>

    <navigation-rule>
        <from-view-id>/order.xhtml</from-view-id>

        <navigation-case>
            <from-action>#{addressBean.addAddress}</from-action>
            <from-outcome>fail</from-outcome>
            <to-view-id>/order.xhtml</to-view-id>
        </navigation-case>

        <navigation-case>
            <from-action>#{addressBean.addAddress}</from-action>
            <from-outcome>success</from-outcome>
            <to-view-id>/address.xhtml</to-view-id>
        </navigation-case>

        <navigation-case>
            <from-action>#{addressBean.addressById}</from-action>
            <from-outcome>fail</from-outcome>
            <to-view-id>/order.xhtml</to-view-id>
        </navigation-case>

        <navigation-case>
            <from-action>#{addressBean.addressById}</from-action>
            <from-outcome>success</from-outcome>
            <to-view-id>/address.xhtml</to-view-id>
        </navigation-case>
    </navigation-rule>

</faces-config>