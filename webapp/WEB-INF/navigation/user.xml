<?xml version='1.0' encoding='UTF-8'?>
<faces-config version="2.2" xmlns="http://xmlns.jcp.org/xml/ns/javaee"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee
    http://xmlns.jcp.org/xml/ns/javaee/web-facesconfig_2_2.xsd">

    <!-- AUTHORIZATION -->
    <navigation-rule>
        <from-view-id>/authorization.xhtml</from-view-id>

        <!-- authorization -->
        <navigation-case>
            <from-action>#{userBean.authorization}</from-action>
            <from-outcome>success</from-outcome>
            <to-view-id>/profile.xhtml</to-view-id>
        </navigation-case>
        <navigation-case>
            <from-action>#{userBean.authorization}</from-action>
            <from-outcome>fail</from-outcome>
            <to-view-id>/authorization.xhtml</to-view-id>
        </navigation-case>

        <!-- links -->
        <navigation-case>
            <from-outcome>registration</from-outcome>
            <to-view-id>/registration.xhtml</to-view-id>
        </navigation-case>
    </navigation-rule>

    <!-- REGISTRATION -->
    <navigation-rule>
        <from-view-id>/registration.xhtml</from-view-id>

        <!-- registration -->
        <navigation-case>
            <from-action>#{userBean.registration}</from-action>
            <from-outcome>success</from-outcome>
            <to-view-id>/profile.xhtml</to-view-id>
        </navigation-case>
        <navigation-case>
            <from-action>#{userBean.registration}</from-action>
            <from-outcome>fail</from-outcome>
            <to-view-id>/registration.xhtml</to-view-id>
        </navigation-case>

        <!-- links -->
        <navigation-case>
            <from-outcome>authorization</from-outcome>
            <to-view-id>/authorization.xhtml</to-view-id>
        </navigation-case>
    </navigation-rule>

    <!-- PROFILE -->
    <navigation-rule>
        <from-view-id>/profile.xhtml</from-view-id>

        <!-- logout -->
        <navigation-case>
            <from-action>#{userBean.logout}</from-action>
            <from-outcome>success</from-outcome>
            <to-view-id>/authorization.xhtml</to-view-id>
        </navigation-case>
        <navigation-case>
            <from-action>#{userBean.logout}</from-action>
            <from-outcome>fail</from-outcome>
            <to-view-id>/profile.xhtml</to-view-id>
        </navigation-case>

        <!-- links -->
        <navigation-case>
            <from-outcome>myDeals</from-outcome>
            <to-view-id>/my_deals.xhtml</to-view-id>
        </navigation-case>
        <navigation-case>
            <from-outcome>myOrders</from-outcome>
            <to-view-id>/my_orders.xhtml</to-view-id>
        </navigation-case>
        <navigation-case>
            <from-outcome>settings</from-outcome>
            <to-view-id>/settings.xhtml</to-view-id>
        </navigation-case>
        <navigation-case>
            <from-outcome>profile</from-outcome>
            <to-view-id>/profile.xhtml</to-view-id>
        </navigation-case>
        <navigation-case>
            <from-outcome>searchProduct</from-outcome>
            <to-view-id>/search_products.xhtml</to-view-id>
        </navigation-case>
        <navigation-case>
            <from-outcome>myProducts</from-outcome>
            <to-view-id>/my_products.xhtml</to-view-id>
        </navigation-case>
    </navigation-rule>

    <!-- SETTINGS -->
    <navigation-rule>
        <from-view-id>/settings.xhtml</from-view-id>

        <!-- update account -->
        <navigation-case>
            <from-action>#{userBean.updateAccount}</from-action>
            <from-outcome>success</from-outcome>
            <to-view-id>/profile.xhtml</to-view-id>
        </navigation-case>
        <navigation-case>
            <from-action>#{userBean.updateAccount}</from-action>
            <from-outcome>fail</from-outcome>
            <to-view-id>/settings.xhtml</to-view-id>
        </navigation-case>

        <!-- delete account -->
        <navigation-case>
            <from-action>#{userBean.deleteAccount}</from-action>
            <from-outcome>success</from-outcome>
            <to-view-id>/authorization.xhtml</to-view-id>
        </navigation-case>
        <navigation-case>
            <from-action>#{userBean.deleteAccount}</from-action>
            <from-outcome>fail</from-outcome>
            <to-view-id>/profile.xhtml</to-view-id>
        </navigation-case>

        <!-- logout -->
        <navigation-case>
            <from-action>#{userBean.logout}</from-action>
            <from-outcome>success</from-outcome>
            <to-view-id>/authorization.xhtml</to-view-id>
        </navigation-case>
        <navigation-case>
            <from-action>#{userBean.logout}</from-action>
            <from-outcome>fail</from-outcome>
            <to-view-id>/settings.xhtml</to-view-id>
        </navigation-case>

        <!-- links -->
        <navigation-case>
            <from-outcome>myDeals</from-outcome>
            <to-view-id>/my_deals.xhtml</to-view-id>
        </navigation-case>
        <navigation-case>
            <from-outcome>myOrders</from-outcome>
            <to-view-id>/my_orders.xhtml</to-view-id>
        </navigation-case>
        <navigation-case>
            <from-outcome>settings</from-outcome>
            <to-view-id>/settings.xhtml</to-view-id>
        </navigation-case>
        <navigation-case>
            <from-outcome>profile</from-outcome>
            <to-view-id>/profile.xhtml</to-view-id>
        </navigation-case>
        <navigation-case>
            <from-outcome>searchProduct</from-outcome>
            <to-view-id>/search_products.xhtml</to-view-id>
        </navigation-case>
        <navigation-case>
            <from-outcome>myProducts</from-outcome>
            <to-view-id>/my_products.xhtml</to-view-id>
        </navigation-case>
    </navigation-rule>

</faces-config>